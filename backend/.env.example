# Configuração do Servidor
PORT=3000
FRONTEND_BASE_URL=http://localhost:5173

# Segurança (JWT & Criptografia)
# Gere strings aleatórias seguras para estas chaves
JWT_SECRET=sua_chave_secreta_jwt_aqui
ENCRYPTION_KEY=sua_chave_de_criptografia_32_bytes_hex

# Banco de Dados (PostgreSQL)
DATABASE_URL=postgres://user:password@localhost:5432/lambda_client

# Redis (Cache & Filas)
REDIS_URL=redis://localhost:6379

# AWS Configuration (SDK)
# As credenciais são gerenciadas preferencialmente via IAM Roles ou AWS CLI Profiles
# Mas podem ser injetadas se necessário pelo ambiente
AWS_REGION=us-east-1

# Resend (Envio de Emails)
RESEND_API_KEY=re_123456789
RESEND_FROM=Onboarding <onboarding@seudominio.com>

# Integração GitHub (Opcional - para funcionalidades de IA/Pull Requests)
GITHUB_TOKEN=ghp_seu_token_pessoal_github
GITHUB_MODEL=openai/gpt-4o-mini
